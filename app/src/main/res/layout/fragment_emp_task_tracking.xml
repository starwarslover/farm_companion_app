<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:animateLayoutChanges="true"
              android:orientation="vertical"
              tools:context=".emp_account.fragments.EmpTaskTrackingFragment">

  <TextView
      android:id="@+id/taskTrackTaskName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:padding="10dp"
      android:text="DUMMY NAME"
      android:textSize="20sp"
      />

  <GridLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:columnCount="2"
      android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:padding="10dp"
        android:text="@string/started_at"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/startedAtTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:textSize="16sp"/>

    <Space
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        />

    <Space
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:padding="10dp"
        android:text="@string/travel_speed"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/travelSpeedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:text="0.0 km/h"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:padding="10dp"
        android:text="@string/total_elapsed_time"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/totalTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:text="00:00:00"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:padding="10dp"
        android:text="@string/total_distance"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/totalDistanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:text="0 m"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="5"
        android:padding="10dp"
        android:text="@string/state"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="5"
        android:text="N/A"
        android:textSize="16sp"/>
  </GridLayout>

  <Button
      android:id="@+id/empTrackStopBroadcastButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="@string/pause_task"/>

</LinearLayout>
